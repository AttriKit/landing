    }

    .cta-info {
      display: flex;
      justify-content: center;
      gap: var(--spacing-6);
      flex-wrap: wrap;
    }

    .info-item {
      display: flex;
      align-items: center;
      gap: var(--spacing-2);
      color: var(--color-text-muted);

    .pricing {
      background: linear-gradient(180deg, var(--color-surface-alt) 0%, var(--color-surface) 100%);
    }

    .pricing-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--spacing-6);
      align-items: start;
    }

    .pricing-card {
      background: var(--color-surface-elevated);
      border: 2px solid var(--color-border-light);
      border-radius: var(--radius-2xl);
      padding: var(--spacing-10) var(--spacing-8);
      display: flex;
      flex-direction: column;
      position: relative;
      transition: all var(--transition-base);
    }

    .pricing-card:hover {
      transform: translateY(-6px);
      border-color: var(--color-border);
      box-shadow: var(--shadow-lg);
    }

    .pricing-card.featured {
      border-color: var(--color-cyan-400);
      box-shadow: 0 0 50px rgba(0, 145, 168, 0.15), var(--shadow-md);
    }

    .pricing-badge-featured {
      position: absolute;
      top: -12px;
      right: var(--spacing-8);
      background: linear-gradient(135deg, var(--color-cyan-600), var(--color-purple-500));
      color: var(--color-white);
      padding: var(--spacing-2) var(--spacing-5);
      border-radius: 999px;
      font-size: var(--font-size-sm);
      font-weight: 700;
      box-shadow: var(--shadow-md);
    }

    .pricing-header {
      margin-bottom: var(--spacing-5);
    }

    .pricing-title {
      font-size: var(--font-size-2xl);
      margin-bottom: var(--spacing-3);
    }

    .pricing-badge {
      display: inline-block;
      padding: var(--spacing-1) var(--spacing-3);
      background: linear-gradient(135deg, rgba(0, 145, 168, 0.12), rgba(168, 85, 247, 0.08));
      border: 1px solid var(--color-cyan-400);
      border-radius: 999px;
      font-size: var(--font-size-xs);
      font-weight: 600;
      color: var(--color-primary);
    }

    .pricing-price {
      margin-bottom: var(--spacing-6);
    }

    .price-value {
      font-size: var(--font-size-4xl);
      font-weight: 800;
      color: var(--color-text);
    }

    .pricing-features {
      list-style: none;
      margin-bottom: var(--spacing-6);
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-4);
    }

    .pricing-features li {
      display: flex;
      align-items: flex-start;
      gap: var(--spacing-3);
      color: var(--color-text);
    }

    .pricing-features svg {
      color: var(--color-primary);
      flex-shrink: 0;
      margin-top: 2px;
    }

    /* CTA Section */
    .cta {
      text-align: center;
    }

    .cta-content {
      max-width: 800px;
      margin: 0 auto;
    }

    .cta-title {
      font-size: var(--font-size-5xl);
      margin-bottom: var(--spacing-5);
    }

    .cta-subtitle {
      font-size: var(--font-size-xl);

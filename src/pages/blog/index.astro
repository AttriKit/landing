---
import { getCollection } from 'astro:content';
import '../../styles/global.css';

const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>博客 - AttriKit</title>
  <meta name="description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content="博客 - AttriKit" />
  <meta property="og:description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://attrikit.com/blog/" />
  <meta property="og:locale" content="zh_CN" />

  <!-- Canonical URL -->
  <link rel="canonical" href="https://attrikit.com/blog/" />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />
</head>
<body>
  <!-- Header -->
  <header class="header">
    <nav class="nav container">
      <a href="/" class="nav-brand">
        <img src="/favicon.svg" alt="AttriKit Logo" class="logo" />
        <span class="brand-name">AttriKit</span>
      </a>
      <ul class="nav-menu">
        <li><a href="/blog/">博客</a></li>
        <li><a href="/#features">产品功能</a></li>
        <li><a href="/#comparison">对比优势</a></li>
        <li><a href="/#pricing">价格方案</a></li>
        <li><a href="/#contact" class="btn btn-primary btn-sm">立即咨询</a></li>
      </ul>
      <button class="nav-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="blog-page section-lg">
    <div class="container">
      <div class="page-header">
        <h1 class="page-title">博客</h1>
        <p class="page-subtitle">关于第一方归因、广告技术和产品更新</p>
      </div>

      {posts.length === 0 ? (
        <div class="empty-state">
          <p>暂无文章，敬请期待...</p>
        </div>
      ) : (
        <div class="posts-grid">
          {posts.map((post) => (
            <article class="post-card">
              <a href={`/blog/${post.slug}/`} class="post-card-link">
                <h2 class="post-title">{post.data.title}</h2>
                <p class="post-description">{post.data.description}</p>
                <div class="post-meta">
                  <time datetime={post.data.pubDate.toISOString()}>
                    {post.data.pubDate.toLocaleDateString('zh-CN', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <span class="post-author">{post.data.author}</span>
                </div>
              </a>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="footer-logo">
            <img src="/favicon.svg" alt="AttriKit" />
            <span>AttriKit</span>
          </div>
          <p class="footer-tagline">让每个广告主都能轻松构建第一方归因系统</p>
        </div>
        <div class="footer-links">
          <div class="footer-column">
            <h4>产品</h4>
            <ul>
              <li><a href="/#features">产品功能</a></li>
              <li><a href="/#comparison">对比优势</a></li>
              <li><a href="/#pricing">价格方案</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>资源</h4>
            <ul>
              <li><a href="/blog/">博客</a></li>
              <li><a href="#">文档</a></li>
              <li><a href="#">API 参考</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>支持</h4>
            <ul>
              <li><a href="#">帮助中心</a></li>
              <li><a href="/#contact">联系我们</a></li>
              <li><a href="#">社区</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} AttriKit. 保留所有权利。</p>
      </div>
    </div>
  </footer>

  <style>
    /* Header Styles - Reused from index.astro */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: var(--header-height);
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      border-bottom: 1px solid var(--color-border);
      z-index: var(--z-fixed);
      transition: background 300ms ease;
    }

    .nav {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-brand {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      text-decoration: none;
    }

    .logo {
      width: 36px;
      height: 36px;
    }

    .brand-name {
      font-size: var(--font-size-lg);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      letter-spacing: -0.02em;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: var(--spacing-10);
      list-style: none;
    }

    .nav-menu a {
      color: var(--color-text-muted);
      font-weight: 500;
      font-size: var(--font-size-sm);
      transition: color 200ms ease;
    }

    .nav-menu a:hover {
      color: var(--color-accent-primary);
    }

    .btn-sm {
      padding: var(--spacing-2) var(--spacing-4);
      font-size: var(--font-size-sm);
    }

    .nav-toggle {
      display: none;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      cursor: pointer;
      padding: var(--spacing-2);
    }

    .nav-toggle span {
      width: 24px;
      height: 1.5px;
      background: var(--color-text-primary);
      border-radius: 2px;
      transition: all 300ms ease;
    }

    /* Blog Page Styles */
    .blog-page {
      padding-top: calc(var(--header-height) + var(--spacing-16));
      padding-bottom: var(--spacing-16);
    }

    .page-header {
      text-align: center;
      margin-bottom: var(--spacing-16);
    }

    .page-title {
      font-size: clamp(36px, 5vw, 56px);
      font-weight: 700;
      margin-bottom: var(--spacing-4);
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
    }

    .page-subtitle {
      font-size: var(--font-size-lg);
      color: var(--color-text-muted);
      margin: 0;
    }

    .empty-state {
      text-align: center;
      padding: var(--spacing-16);
      color: var(--color-text-muted);
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: var(--spacing-8);
    }

    .post-card {
      background: var(--color-bg-surface);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-xl);
      padding: var(--spacing-8);
      transition: all 300ms ease;
    }

    .post-card:hover {
      transform: translateY(-4px);
      border-color: var(--color-border-hover);
      box-shadow: var(--shadow-md);
    }

    .post-card-link {
      text-decoration: none;
      color: inherit;
      display: block;
    }

    .post-title {
      font-size: var(--font-size-xl);
      font-weight: 600;
      margin-bottom: var(--spacing-3);
      color: var(--color-text-primary);
      line-height: 1.4;
    }

    .post-description {
      color: var(--color-text-muted);
      line-height: 1.6;
      margin-bottom: var(--spacing-6);
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .post-meta {
      display: flex;
      align-items: center;
      gap: var(--spacing-4);
      font-size: var(--font-size-sm);
      color: var(--color-text-light);
    }

    .post-author::before {
      content: '·';
      margin-right: var(--spacing-2);
    }

    /* Footer Styles - Reused from index.astro */
    .footer {
      background: var(--color-bg-surface);
      border-top: 1px solid var(--color-border);
      padding: var(--spacing-16) 0 var(--spacing-8);
    }

    .footer-content {
      display: grid;
      grid-template-columns: 2fr 3fr;
      gap: var(--spacing-12);
      margin-bottom: var(--spacing-10);
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-4);
    }

    .footer-logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      font-size: var(--font-size-base);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      text-decoration: none;
    }

    .footer-logo img {
      width: 32px;
      height: 32px;
    }

    .footer-tagline {
      color: var(--color-text-muted);
      max-width: 320px;
      margin: 0;
      font-size: var(--font-size-sm);
    }

    .footer-links {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-8);
    }

    .footer-column h4 {
      font-size: var(--font-size-sm);
      margin-bottom: var(--spacing-4);
      color: var(--color-text-primary);
      font-weight: 600;
    }

    .footer-column ul {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-3);
    }

    .footer-column a {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
      text-decoration: none;
      transition: color 200ms ease;
    }

    .footer-column a:hover {
      color: var(--color-accent-primary);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--spacing-8);
      border-top: 1px solid var(--color-border);
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }

    .footer-bottom p {
      margin: 0;
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
      .footer-content {
        grid-template-columns: 1fr;
        gap: var(--spacing-8);
      }
    }

    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }

      .nav-toggle {
        display: flex;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }

      .footer-links {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .page-title {
        font-size: var(--font-size-3xl);
      }

      .page-subtitle {
        font-size: var(--font-size-base);
      }
    }
  </style>

  <script>
    // Mobile menu toggle
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => {
        const isVisible = navMenu.style.display === 'flex';
        navMenu.style.display = isVisible ? 'none' : 'flex';
        if (!isVisible) {
          navMenu.style.position = 'absolute';
          navMenu.style.top = '100%';
          navMenu.style.left = '0';
          navMenu.style.right = '0';
          navMenu.style.background = 'white';
          navMenu.style.padding = 'var(--spacing-6)';
          navMenu.style.flexDirection = 'column';
          navMenu.style.borderTop = '1px solid var(--color-border)';
        }
      });
    }
  </script>
</body>
</html>

 ---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import PostCard from '../../components/PostCard.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConsultationModal from '../../components/ConsultationModal.astro';

const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>博客 - AttriKit</title>
  <meta name="description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content="博客 - AttriKit" />
  <meta property="og:description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://attrikit.com/blog/" />
  <meta property="og:image" content="https://attrikit.com/og.webp" />
  <meta property="og:locale" content="zh_CN" />

  <!-- Canonical URL -->
  <link rel="canonical" href="https://attrikit.com/blog/" />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="博客 - AttriKit" />
  <meta name="twitter:description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />
  <meta name="twitter:image" content="https://attrikit.com/og.webp" />
</head>
<body>
  <!-- Header -->
  <Header />

  <!-- Main Content -->
  <main class="blog-page section-lg">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title">博客</h1>
        <p class="page-subtitle">关于第一方归因、广告技术和产品更新</p>
      </div>

      <!-- Posts Grid -->
      {posts.length === 0 ? (
        <div class="empty-state">
          <svg width="64" height="64" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="empty-icon">
            <path d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
          <h3>暂无文章</h3>
          <p>敬请期待更多精彩内容...</p>
        </div>
      ) : (
        <div class="posts-grid">
          {posts.map(post => (
            <PostCard post={post} />
          ))}
        </div>
      )}
    </div>
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Consultation Modal -->
  <ConsultationModal />

  <style>
    /* Blog Page Styles */
    .blog-page {
      padding-top: calc(var(--header-height) + var(--spacing-16));
      padding-bottom: var(--spacing-16);
    }

    .page-header {
      text-align: center;
      margin-bottom: var(--spacing-12);
    }

    .page-title {
      font-size: clamp(36px, 5vw, 56px);
      font-weight: 700;
      margin-bottom: var(--spacing-4);
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
      animation: fadeUp var(--transition-base) ease;
    }

    .page-subtitle {
      font-size: var(--font-size-lg);
      color: var(--color-text-muted);
      margin: 0;
      animation: fadeUp var(--transition-base) ease 0.1s both;
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: var(--spacing-16);
      color: var(--color-text-muted);
    }

    .empty-icon {
      color: var(--color-text-light);
      margin: 0 auto var(--spacing-6);
      opacity: 0.5;
    }

    .empty-state h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-3);
      color: var(--color-text-secondary);
    }

    .empty-state p {
      font-size: var(--font-size-base);
      margin: 0;
    }

    /* Posts Grid */
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: var(--spacing-8);
      animation: fadeUp var(--transition-base) ease 0.2s both;
    }

    /* Responsive Styles */
    @media (max-width: 640px) {
      .posts-grid {
        grid-template-columns: 1fr;
        gap: var(--spacing-5);
      }
    }

    @media (max-width: 480px) {
      .page-title {
        font-size: var(--font-size-3xl);
      }

      .page-subtitle {
        font-size: var(--font-size-base);
      }
    }

    /* Animations */
    @keyframes fadeUp {
      from {
        opacity: 0;
        transform: translateY(16px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>
</body>
</html>


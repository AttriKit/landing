---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import PostCard from '../../components/PostCard.astro';
import BlogSearch from '../../components/BlogSearch.astro';

const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) =>
  b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

// Get all unique tags
const allTags = Array.from(
  new Set(allPosts.flatMap(post => post.data.tags || []))
).sort();
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>博客 - AttriKit</title>
  <meta name="description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content="博客 - AttriKit" />
  <meta property="og:description" content="AttriKit 博客 - 第一方广告归因系统的技术文章和产品更新" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://attrikit.com/blog/" />
  <meta property="og:locale" content="zh_CN" />

  <!-- Canonical URL -->
  <link rel="canonical" href="https://attrikit.com/blog/" />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />
</head>
<body>
  <!-- Header -->
  <header class="header">
    <nav class="nav container">
      <a href="/" class="nav-brand">
        <img src="/favicon.svg" alt="AttriKit Logo" class="logo" />
        <span class="brand-name">AttriKit</span>
      </a>
      <ul class="nav-menu">
        <li><a href="/blog/" class="active">博客</a></li>
        <li><a href="/#features">产品功能</a></li>
        <li><a href="/#comparison">对比优势</a></li>
        <li><a href="/#pricing">价格方案</a></li>
        <li><a href="/#contact" class="btn btn-primary btn-sm">立即咨询</a></li>
      </ul>
      <button class="nav-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="blog-page section-lg">
    <div class="container">
      <!-- Page Header -->
      <div class="page-header">
        <h1 class="page-title">博客</h1>
        <p class="page-subtitle">关于第一方归因、广告技术和产品更新</p>
      </div>

      <!-- Search -->
      <BlogSearch />

      <!-- Tags Filter -->
      {allTags.length > 0 && (
        <div class="tags-filter">
          <button class="tag-filter-btn active" data-tag="all">
            全部
          </button>
          {allTags.map(tag => (
            <button class="tag-filter-btn" data-tag={tag}>
              {tag}
            </button>
          ))}
        </div>
      )}

      <!-- Posts Grid -->
      {posts.length === 0 ? (
        <div class="empty-state">
          <svg width="64" height="64" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="empty-icon">
            <path d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"/>
          </svg>
          <h3>暂无文章</h3>
          <p>敬请期待更多精彩内容...</p>
        </div>
      ) : (
        <div class="posts-grid" id="posts-grid">
          {posts.map(post => (
            <PostCard post={post} />
          ))}
        </div>
      )}

      <!-- No Results Message (hidden by default) -->
      <div id="no-results" class="no-results" style="display: none;">
        <svg width="48" height="48" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24" class="no-results-icon">
          <circle cx="11" cy="11" r="8"/>
          <path d="M21 21l-4.35-4.35"/>
        </svg>
        <h3>未找到相关文章</h3>
        <p>尝试使用其他关键词或标签筛选</p>
        <button id="clear-search" class="btn btn-secondary btn-sm">
          清除筛选
        </button>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="footer-logo">
            <img src="/favicon.svg" alt="AttriKit" />
            <span>AttriKit</span>
          </div>
          <p class="footer-tagline">让每个广告主都能轻松构建第一方归因系统</p>
        </div>
        <div class="footer-links">
          <div class="footer-column">
            <h4>产品</h4>
            <ul>
              <li><a href="/#features">产品功能</a></li>
              <li><a href="/#comparison">对比优势</a></li>
              <li><a href="/#pricing">价格方案</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>资源</h4>
            <ul>
              <li><a href="/blog/">博客</a></li>
              <li><a href="#">文档</a></li>
              <li><a href="#">API 参考</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>支持</h4>
            <ul>
              <li><a href="#">帮助中心</a></li>
              <li><a href="/#contact">联系我们</a></li>
              <li><a href="#">社区</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} AttriKit. 保留所有权利。</p>
      </div>
    </div>
  </footer>

  <style>
    /* Header Styles */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: var(--header-height);
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      border-bottom: 1px solid var(--color-border);
      z-index: var(--z-fixed);
      transition: background var(--transition-base);
    }

    .nav {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-brand {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      text-decoration: none;
    }

    .logo {
      width: 36px;
      height: 36px;
    }

    .brand-name {
      font-size: var(--font-size-lg);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      letter-spacing: -0.02em;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: var(--spacing-10);
      list-style: none;
    }

    .nav-menu a {
      color: var(--color-text-muted);
      font-weight: 500;
      font-size: var(--font-size-sm);
      transition: color var(--transition-fast);
    }

    .nav-menu a:hover,
    .nav-menu a.active {
      color: var(--color-accent-primary);
    }

    .btn-sm {
      padding: var(--spacing-2) var(--spacing-4);
      font-size: var(--font-size-sm);
    }

    .nav-toggle {
      display: none;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      cursor: pointer;
      padding: var(--spacing-2);
    }

    .nav-toggle span {
      width: 24px;
      height: 1.5px;
      background: var(--color-text-primary);
      border-radius: 2px;
      transition: all var(--transition-base);
    }

    /* Blog Page Styles */
    .blog-page {
      padding-top: calc(var(--header-height) + var(--spacing-16));
      padding-bottom: var(--spacing-16);
    }

    .page-header {
      text-align: center;
      margin-bottom: var(--spacing-12);
    }

    .page-title {
      font-size: clamp(36px, 5vw, 56px);
      font-weight: 700;
      margin-bottom: var(--spacing-4);
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
      animation: fadeUp var(--transition-base) ease;
    }

    .page-subtitle {
      font-size: var(--font-size-lg);
      color: var(--color-text-muted);
      margin: 0;
      animation: fadeUp var(--transition-base) ease 0.1s both;
    }

    /* Tags Filter */
    .tags-filter {
      display: flex;
      flex-wrap: wrap;
      gap: 8px;
      justify-content: center;
      margin-bottom: var(--spacing-12);
    }

    .tag-filter-btn {
      padding: 8px 16px;
      background: var(--color-bg-surface);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-md);
      font-size: var(--font-size-sm);
      font-weight: 500;
      font-family: var(--font-family-body);
      color: var(--color-text-secondary);
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .tag-filter-btn:hover {
      border-color: var(--color-border-hover);
      transform: translateY(-1px);
    }

    .tag-filter-btn.active {
      background: var(--color-accent-primary);
      color: #fff;
      border-color: var(--color-accent-primary);
    }

    /* Empty State */
    .empty-state {
      text-align: center;
      padding: var(--spacing-16);
      color: var(--color-text-muted);
    }

    .empty-icon {
      color: var(--color-text-light);
      margin: 0 auto var(--spacing-6);
      opacity: 0.5;
    }

    .empty-state h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-3);
      color: var(--color-text-secondary);
    }

    .empty-state p {
      font-size: var(--font-size-base);
      margin: 0;
    }

    /* No Results */
    .no-results {
      text-align: center;
      padding: var(--spacing-16);
    }

    .no-results-icon {
      color: var(--color-text-light);
      margin: 0 auto var(--spacing-6);
      opacity: 0.5;
    }

    .no-results h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-3);
      color: var(--color-text-secondary);
    }

    .no-results p {
      color: var(--color-text-muted);
      margin-bottom: var(--spacing-6);
    }

    .btn-secondary {
      background: transparent;
      color: var(--color-accent-primary);
      border: 1.5px solid var(--color-border);
      padding: 16px 32px;
      border-radius: var(--radius-lg);
      cursor: pointer;
      font-size: var(--font-size-base);
      font-weight: 500;
      transition: all var(--transition-fast);
    }

    .btn-secondary:hover {
      background: var(--color-accent-subtle);
      border-color: var(--color-accent-primary);
    }

    /* Posts Grid */
    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(340px, 1fr));
      gap: var(--spacing-8);
      animation: fadeUp var(--transition-base) ease 0.2s both;
    }

    /* Footer Styles */
    .footer {
      background: var(--color-bg-surface);
      border-top: 1px solid var(--color-border);
      padding: var(--spacing-16) 0 var(--spacing-8);
    }

    .footer-content {
      display: grid;
      grid-template-columns: 2fr 3fr;
      gap: var(--spacing-12);
      margin-bottom: var(--spacing-10);
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-4);
    }

    .footer-logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      font-size: var(--font-size-base);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      text-decoration: none;
    }

    .footer-logo img {
      width: 32px;
      height: 32px;
    }

    .footer-tagline {
      color: var(--color-text-muted);
      max-width: 320px;
      margin: 0;
      font-size: var(--font-size-sm);
    }

    .footer-links {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-8);
    }

    .footer-column h4 {
      font-size: var(--font-size-sm);
      margin-bottom: var(--spacing-4);
      color: var(--color-text-primary);
      font-weight: 600;
    }

    .footer-column ul {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-3);
    }

    .footer-column a {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .footer-column a:hover {
      color: var(--color-accent-primary);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--spacing-8);
      border-top: 1px solid var(--color-border);
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }

    .footer-bottom p {
      margin: 0;
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
      .footer-content {
        grid-template-columns: 1fr;
        gap: var(--spacing-8);
      }
    }

    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }

      .nav-toggle {
        display: flex;
      }

      .posts-grid {
        grid-template-columns: 1fr;
      }

      .footer-links {
        grid-template-columns: 1fr;
      }

      .tags-filter {
        justify-content: flex-start;
        overflow-x: auto;
        flex-wrap: nowrap;
        padding-bottom: var(--spacing-2);
        -webkit-overflow-scrolling: touch;
      }

      .tags-filter::-webkit-scrollbar {
        height: 4px;
      }

      .tags-filter::-webkit-scrollbar-thumb {
        background: var(--color-border);
        border-radius: 2px;
      }
    }

    @media (max-width: 480px) {
      .page-title {
        font-size: var(--font-size-3xl);
      }

      .page-subtitle {
        font-size: var(--font-size-base);
      }
    }

    /* Animations */
    @keyframes fadeUp {
      from {
        opacity: 0;
        transform: translateY(16px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
  </style>

  <script>
    // Tag filter functionality
    const tagButtons = document.querySelectorAll('.tag-filter-btn');
    const postCards = document.querySelectorAll('.post-card');
    const noResults = document.getElementById('no-results');
    const clearSearchBtn = document.getElementById('clear-search');
    const postsGrid = document.getElementById('posts-grid');
    let activeTag = 'all';

    tagButtons.forEach(button => {
      button.addEventListener('click', () => {
        const tag = button.dataset.tag || 'all';
        activeTag = tag;

        // Update active state
        tagButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter posts
        filterPosts();
      });
    });

    clearSearchBtn?.addEventListener('click', () => {
      // Clear search input
      const searchInput = document.getElementById('blog-search-input');
      if (searchInput) {
        searchInput.value = '';
        const searchClear = document.getElementById('search-clear');
        if (searchClear) {
          searchClear.style.display = 'none';
        }
      }

      // Reset tag filter
      tagButtons.forEach(btn => btn.classList.remove('active'));
      document.querySelector('[data-tag="all"]')?.classList.add('active');
      activeTag = 'all';

      filterPosts();
    });

    function filterPosts() {
      let visibleCount = 0;

      postCards.forEach(card => {
        const cardTags = Array.from(card.querySelectorAll('.tag-badge'))
          .map(tag => tag.textContent?.trim());

        const matchesTag = activeTag === 'all' || cardTags.includes(activeTag);

        if (matchesTag) {
          (card as HTMLElement).style.display = '';
          visibleCount++;
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Show/hide no results message
      if (visibleCount === 0) {
        noResults!.style.display = 'block';
        postsGrid!.style.display = 'none';
      } else {
        noResults!.style.display = 'none';
        postsGrid!.style.display = 'grid';
      }
    }

    // Listen for search filtered events
    window.addEventListener('blog-posts-filtered', (e: Event) => {
      const detail = (e as CustomEvent).detail;
      if (detail.visibleCount === 0) {
        noResults!.style.display = 'block';
        postsGrid!.style.display = 'none';
      } else {
        noResults!.style.display = 'none';
        postsGrid!.style.display = 'grid';
      }
    });

    // Mobile menu toggle
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => {
        const isVisible = navMenu.style.display === 'flex';
        navMenu.style.display = isVisible ? 'none' : 'flex';
        if (!isVisible) {
          navMenu.style.position = 'absolute';
          navMenu.style.top = '100%';
          navMenu.style.left = '0';
          navMenu.style.right = '0';
          navMenu.style.background = 'white';
          navMenu.style.padding = 'var(--spacing-6)';
          navMenu.style.flexDirection = 'column';
          navMenu.style.borderTop = '1px solid var(--color-border)';
        }
      });
    }
  </script>
</body>
</html>

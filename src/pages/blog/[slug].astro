---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import ProgressBar from '../../components/ProgressBar.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Calculate reading time
const wordCount = post.body?.split('').length || 0;
const readTimeMinutes = Math.max(1, Math.ceil(wordCount / 400));

// Breadcrumb items
const breadcrumbItems = [
  { label: '首页', href: '/' },
  { label: '博客', href: '/blog/' },
  { label: post.data.title }
];

const postUrl = `https://attrikit.com/blog/${post.slug}/`;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{post.data.title} - AttriKit 博客</title>
  <meta name="description" content={post.data.description} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content={post.data.title} />
  <meta property="og:description" content={post.data.description} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={postUrl} />
  <meta property="og:locale" content="zh_CN" />
  <meta property="article:published_time" content={post.data.pubDate.toISOString()} />

  <!-- Canonical URL -->
  <link rel="canonical" href={postUrl} />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />
</head>
<body>
  <!-- Header -->
  <Header />

  <!-- Progress Bar -->
  <ProgressBar />

  <!-- Article Content -->
  <article class="blog-post section-lg">
    <div class="container">
      <div class="blog-layout">
        <!-- Main Content -->
        <div class="blog-main">
          <!-- Breadcrumb -->
          <Breadcrumb items={breadcrumbItems} />

          <!-- Article Header -->
          <header class="post-header">
            <h1 class="post-title">{post.data.title}</h1>
            <p class="post-description">{post.data.description}</p>

            <div class="post-meta-row">
              <div class="post-meta">
                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                  </svg>
                  <span>{post.data.author}</span>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                  <span>{readTimeMinutes} 分钟阅读</span>
                </div>
              </div>

              <ShareButtons title={post.data.title} url={postUrl} />
            </div>
          </header>

          <!-- Article Content -->
          <div class="post-content">
            <Content />
          </div>

          <!-- Article Footer -->
          <footer class="post-footer">
            <ShareButtons title={post.data.title} url={postUrl} />
          </footer>
        </div>

        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <TableOfContents />
        </aside>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <Footer />

  <style>
    /* Blog Post Layout */
    .blog-post {
      padding-top: calc(var(--header-height) + var(--spacing-12));
      padding-bottom: var(--spacing-16);
    }

    .blog-layout {
      display: grid;
      grid-template-columns: 1fr 280px;
      gap: var(--spacing-12);
      position: relative;
    }

    .blog-main {
      min-width: 0;
    }

    .blog-sidebar {
      position: relative;
    }

    /* Post Header */
    .post-header {
      margin-bottom: var(--spacing-12);
      padding-bottom: var(--spacing-8);
      border-bottom: 1px solid var(--color-border);
    }

    .post-title {
      font-size: clamp(32px, 5vw, 48px);
      font-weight: 700;
      margin-bottom: var(--spacing-4);
      line-height: 1.2;
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
    }

    .post-description {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      line-height: 1.6;
      margin-bottom: var(--spacing-6);
    }

    .post-meta-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 24px;
      margin-bottom: var(--spacing-8);
    }

    .post-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
    }

    .meta-item {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      font-weight: 500;
    }

    .meta-item svg {
      flex-shrink: 0;
      opacity: 0.6;
    }

    /* Post Content */
    .post-content {
      font-size: var(--font-size-lg);
      line-height: 1.8;
      color: var(--color-text-secondary);
    }

    /* Markdown Styles - Enhanced */
    .post-content :global(h2) {
      font-size: var(--font-size-3xl);
      font-weight: 600;
      margin-top: var(--spacing-12);
      margin-bottom: var(--spacing-4);
      letter-spacing: -0.02em;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
      scroll-margin-top: calc(var(--header-height) + 20px);
    }

    .post-content :global(h3) {
      font-size: var(--font-size-2xl);
      font-weight: 600;
      margin-top: var(--spacing-10);
      margin-bottom: var(--spacing-4);
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
      scroll-margin-top: calc(var(--header-height) + 20px);
    }

    .post-content :global(h4) {
      font-size: var(--font-size-xl);
      font-weight: 600;
      margin-top: var(--spacing-8);
      margin-bottom: 12px;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
    }

    .post-content :global(p) {
      margin-bottom: var(--spacing-6);
    }

    .post-content :global(a) {
      color: var(--color-accent-primary);
      text-decoration: underline;
      text-underline-offset: 2px;
      transition: opacity var(--transition-fast);
    }

    .post-content :global(a:hover) {
      opacity: 0.8;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      margin-bottom: var(--spacing-6);
      padding-left: var(--spacing-6);
    }

    .post-content :global(li) {
      margin-bottom: 8px;
    }

    .post-content :global(blockquote) {
      border-left: 4px solid var(--color-accent-primary);
      padding-left: var(--spacing-6);
      margin: var(--spacing-8) 0;
      color: var(--color-text-muted);
      font-style: italic;
      background: var(--color-accent-subtle);
      padding: var(--spacing-6);
      border-radius: 0 var(--radius-md) var(--radius-md) 0;
    }

    .post-content :global(code) {
      background: var(--color-bg-secondary);
      padding: 0.2em 0.5em;
      border-radius: var(--radius-sm);
      font-size: 0.9em;
      font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
      color: var(--color-accent-secondary);
    }

    .post-content :global(pre) {
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: var(--spacing-6);
      overflow-x: auto;
      margin-bottom: var(--spacing-8);
      font-size: var(--font-size-sm);
    }

    .post-content :global(pre code) {
      background: none;
      padding: 0;
      color: inherit;
    }

    .post-content :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: var(--radius-lg);
      margin: var(--spacing-8) 0;
      box-shadow: var(--shadow-md);
    }

    .post-content :global(hr) {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: var(--spacing-12) 0;
    }

    /* Post Footer */
    .post-footer {
      margin-top: var(--spacing-16);
      padding-top: var(--spacing-8);
      border-top: 1px solid var(--color-border);
      display: flex;
      justify-content: flex-end;
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
      .blog-layout {
        grid-template-columns: 1fr;
      }

      .blog-sidebar {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .post-title {
        font-size: var(--font-size-3xl);
      }

      .post-description {
        font-size: var(--font-size-lg);
      }

      .post-meta-row {
        flex-direction: column;
        align-items: flex-start;
      }

      .post-content :global(h2) {
        font-size: var(--font-size-2xl);
      }

      .post-content :global(h3) {
        font-size: var(--font-size-xl);
      }

      .post-footer {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    @media (max-width: 480px) {
      .blog-post {
        padding-top: calc(var(--header-height) + var(--spacing-8));
      }

      .post-title {
        font-size: var(--font-size-2xl);
      }

      .post-description {
        font-size: var(--font-size-base);
      }

      .post-meta {
        flex-direction: column;
        gap: 12px;
      }
    }
  </style>
</body>
</html>

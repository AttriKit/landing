---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import ProgressBar from '../../components/ProgressBar.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import ShareButtons from '../../components/ShareButtons.astro';
import TableOfContents from '../../components/TableOfContents.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

// Calculate reading time
const wordCount = post.body?.split('').length || 0;
const readTimeMinutes = Math.max(1, Math.ceil(wordCount / 400));

// Breadcrumb items
const breadcrumbItems = [
  { label: '首页', href: '/' },
  { label: '博客', href: '/blog/' },
  { label: post.data.title }
];

const postUrl = `https://attrikit.com/blog/${post.slug}/`;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{post.data.title} - AttriKit 博客</title>
  <meta name="description" content={post.data.description} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content={post.data.title} />
  <meta property="og:description" content={post.data.description} />
  <meta property="og:type" content="article" />
  <meta property="og:url" content={postUrl} />
  <meta property="og:locale" content="zh_CN" />
  <meta property="article:published_time" content={post.data.pubDate.toISOString()} />

  <!-- Canonical URL -->
  <link rel="canonical" href={postUrl} />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />
</head>
<body>
  <!-- Header -->
  <header class="header">
    <nav class="nav container">
      <a href="/" class="nav-brand">
        <img src="/favicon.svg" alt="AttriKit Logo" class="logo" />
        <span class="brand-name">AttriKit</span>
      </a>
      <ul class="nav-menu">
        <li><a href="/blog/">博客</a></li>
        <li><a href="/#features">产品功能</a></li>
        <li><a href="/#comparison">对比优势</a></li>
        <li><a href="/#pricing">价格方案</a></li>
        <li><a href="/#contact" class="btn btn-primary btn-sm">立即咨询</a></li>
      </ul>
      <button class="nav-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </nav>
  </header>

  <!-- Progress Bar -->
  <ProgressBar />

  <!-- Article Content -->
  <article class="blog-post section-lg">
    <div class="container">
      <div class="blog-layout">
        <!-- Main Content -->
        <div class="blog-main">
          <!-- Breadcrumb -->
          <Breadcrumb items={breadcrumbItems} />

          <!-- Article Header -->
          <header class="post-header">
            <h1 class="post-title">{post.data.title}</h1>
            <p class="post-description">{post.data.description}</p>

            <div class="post-meta-row">
              <div class="post-meta">
                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                  </svg>
                  <span>{post.data.author}</span>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                  <span>{readTimeMinutes} 分钟阅读</span>
                </div>
              </div>

              <ShareButtons title={post.data.title} url={postUrl} />
            </div>
          </header>

          <!-- Article Content -->
          <div class="post-content">
            <Content />
          </div>

          <!-- Article Footer -->
          <footer class="post-footer">
            <ShareButtons title={post.data.title} url={postUrl} />
          </footer>
        </div>

        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <TableOfContents />
        </aside>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <footer class="footer">
    <div class="container">
      <div class="footer-content">
        <div class="footer-brand">
          <div class="footer-logo">
            <img src="/favicon.svg" alt="AttriKit" />
            <span>AttriKit</span>
          </div>
          <p class="footer-tagline">让每个广告主都能轻松构建第一方归因系统</p>
        </div>
        <div class="footer-links">
          <div class="footer-column">
            <h4>产品</h4>
            <ul>
              <li><a href="/#features">产品功能</a></li>
              <li><a href="/#comparison">对比优势</a></li>
              <li><a href="/#pricing">价格方案</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>资源</h4>
            <ul>
              <li><a href="/blog/">博客</a></li>
              <li><a href="#">文档</a></li>
              <li><a href="#">API 参考</a></li>
            </ul>
          </div>
          <div class="footer-column">
            <h4>支持</h4>
            <ul>
              <li><a href="#">帮助中心</a></li>
              <li><a href="/#contact">联系我们</a></li>
              <li><a href="#">社区</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} AttriKit. 保留所有权利。</p>
      </div>
    </div>
  </footer>

  <style>
    /* Header Styles */
    .header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: var(--header-height);
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(8px);
      -webkit-backdrop-filter: blur(8px);
      border-bottom: 1px solid var(--color-border);
      z-index: var(--z-fixed);
      transition: background var(--transition-base);
    }

    .nav {
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }

    .nav-brand {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      text-decoration: none;
    }

    .logo {
      width: 36px;
      height: 36px;
    }

    .brand-name {
      font-size: var(--font-size-lg);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      letter-spacing: -0.02em;
    }

    .nav-menu {
      display: flex;
      align-items: center;
      gap: var(--spacing-10);
      list-style: none;
    }

    .nav-menu a {
      color: var(--color-text-muted);
      font-weight: 500;
      font-size: var(--font-size-sm);
      transition: color var(--transition-fast);
    }

    .nav-menu a:hover {
      color: var(--color-accent-primary);
    }

    .btn-sm {
      padding: var(--spacing-2) var(--spacing-4);
      font-size: var(--font-size-sm);
    }

    .nav-toggle {
      display: none;
      flex-direction: column;
      gap: 4px;
      background: none;
      border: none;
      cursor: pointer;
      padding: var(--spacing-2);
    }

    .nav-toggle span {
      width: 24px;
      height: 1.5px;
      background: var(--color-text-primary);
      border-radius: 2px;
      transition: all var(--transition-base);
    }

    /* Blog Post Layout */
    .blog-post {
      padding-top: calc(var(--header-height) + var(--spacing-12));
      padding-bottom: var(--spacing-16);
    }

    .blog-layout {
      display: grid;
      grid-template-columns: 1fr 280px;
      gap: var(--spacing-12);
      position: relative;
    }

    .blog-main {
      min-width: 0;
    }

    .blog-sidebar {
      position: relative;
    }

    /* Post Header */
    .post-header {
      margin-bottom: var(--spacing-12);
      padding-bottom: var(--spacing-8);
      border-bottom: 1px solid var(--color-border);
    }

    .post-title {
      font-size: clamp(32px, 5vw, 48px);
      font-weight: 700;
      margin-bottom: var(--spacing-4);
      line-height: 1.2;
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
    }

    .post-description {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      line-height: 1.6;
      margin-bottom: var(--spacing-6);
    }

    .post-meta-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 24px;
      margin-bottom: var(--spacing-8);
    }

    .post-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
    }

    .meta-item {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      font-weight: 500;
    }

    .meta-item svg {
      flex-shrink: 0;
      opacity: 0.6;
    }

    /* Post Content */
    .post-content {
      font-size: var(--font-size-lg);
      line-height: 1.8;
      color: var(--color-text-secondary);
    }

    /* Markdown Styles - Enhanced */
    .post-content :global(h2) {
      font-size: var(--font-size-3xl);
      font-weight: 600;
      margin-top: var(--spacing-12);
      margin-bottom: var(--spacing-4);
      letter-spacing: -0.02em;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
      scroll-margin-top: calc(var(--header-height) + 20px);
    }

    .post-content :global(h3) {
      font-size: var(--font-size-2xl);
      font-weight: 600;
      margin-top: var(--spacing-10);
      margin-bottom: var(--spacing-4);
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
      scroll-margin-top: calc(var(--header-height) + 20px);
    }

    .post-content :global(h4) {
      font-size: var(--font-size-xl);
      font-weight: 600;
      margin-top: var(--spacing-8);
      margin-bottom: 12px;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
    }

    .post-content :global(p) {
      margin-bottom: var(--spacing-6);
    }

    .post-content :global(a) {
      color: var(--color-accent-primary);
      text-decoration: underline;
      text-underline-offset: 2px;
      transition: opacity var(--transition-fast);
    }

    .post-content :global(a:hover) {
      opacity: 0.8;
    }

    .post-content :global(ul),
    .post-content :global(ol) {
      margin-bottom: var(--spacing-6);
      padding-left: var(--spacing-6);
    }

    .post-content :global(li) {
      margin-bottom: 8px;
    }

    .post-content :global(blockquote) {
      border-left: 4px solid var(--color-accent-primary);
      padding-left: var(--spacing-6);
      margin: var(--spacing-8) 0;
      color: var(--color-text-muted);
      font-style: italic;
      background: var(--color-accent-subtle);
      padding: var(--spacing-6);
      border-radius: 0 var(--radius-md) var(--radius-md) 0;
    }

    .post-content :global(code) {
      background: var(--color-bg-secondary);
      padding: 0.2em 0.5em;
      border-radius: var(--radius-sm);
      font-size: 0.9em;
      font-family: 'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace;
      color: var(--color-accent-secondary);
    }

    .post-content :global(pre) {
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: var(--radius-lg);
      padding: var(--spacing-6);
      overflow-x: auto;
      margin-bottom: var(--spacing-8);
      font-size: var(--font-size-sm);
    }

    .post-content :global(pre code) {
      background: none;
      padding: 0;
      color: inherit;
    }

    .post-content :global(img) {
      max-width: 100%;
      height: auto;
      border-radius: var(--radius-lg);
      margin: var(--spacing-8) 0;
      box-shadow: var(--shadow-md);
    }

    .post-content :global(hr) {
      border: none;
      border-top: 1px solid var(--color-border);
      margin: var(--spacing-12) 0;
    }

    /* Post Footer */
    .post-footer {
      margin-top: var(--spacing-16);
      padding-top: var(--spacing-8);
      border-top: 1px solid var(--color-border);
      display: flex;
      justify-content: flex-end;
    }

    /* Footer Styles */
    .footer {
      background: var(--color-bg-surface);
      border-top: 1px solid var(--color-border);
      padding: var(--spacing-16) 0 var(--spacing-8);
    }

    .footer-content {
      display: grid;
      grid-template-columns: 2fr 3fr;
      gap: var(--spacing-12);
      margin-bottom: var(--spacing-10);
    }

    .footer-brand {
      display: flex;
      flex-direction: column;
      gap: var(--spacing-4);
    }

    .footer-logo {
      display: flex;
      align-items: center;
      gap: var(--spacing-3);
      font-size: var(--font-size-base);
      font-weight: 700;
      font-family: var(--font-family-display);
      color: var(--color-text-primary);
      text-decoration: none;
    }

    .footer-logo img {
      width: 32px;
      height: 32px;
    }

    .footer-tagline {
      color: var(--color-text-muted);
      max-width: 320px;
      margin: 0;
      font-size: var(--font-size-sm);
    }

    .footer-links {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-8);
    }

    .footer-column h4 {
      font-size: var(--font-size-sm);
      margin-bottom: var(--spacing-4);
      color: var(--color-text-primary);
      font-weight: 600;
    }

    .footer-column ul {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: var(--spacing-3);
    }

    .footer-column a {
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
      text-decoration: none;
      transition: color var(--transition-fast);
    }

    .footer-column a:hover {
      color: var(--color-accent-primary);
    }

    .footer-bottom {
      text-align: center;
      padding-top: var(--spacing-8);
      border-top: 1px solid var(--color-border);
      color: var(--color-text-muted);
      font-size: var(--font-size-sm);
    }

    .footer-bottom p {
      margin: 0;
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
      .blog-layout {
        grid-template-columns: 1fr;
      }

      .blog-sidebar {
        display: none;
      }

      .footer-content {
        grid-template-columns: 1fr;
        gap: var(--spacing-8);
      }
    }

    @media (max-width: 768px) {
      .nav-menu {
        display: none;
      }

      .nav-toggle {
        display: flex;
      }

      .post-title {
        font-size: var(--font-size-3xl);
      }

      .post-description {
        font-size: var(--font-size-lg);
      }

      .post-meta-row {
        flex-direction: column;
        align-items: flex-start;
      }

      .post-content :global(h2) {
        font-size: var(--font-size-2xl);
      }

      .post-content :global(h3) {
        font-size: var(--font-size-xl);
      }

      .post-footer {
        flex-direction: column;
        align-items: flex-start;
      }

      .footer-links {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .blog-post {
        padding-top: calc(var(--header-height) + var(--spacing-8));
      }

      .post-title {
        font-size: var(--font-size-2xl);
      }

      .post-description {
        font-size: var(--font-size-base);
      }

      .post-meta {
        flex-direction: column;
        gap: 12px;
      }
    }
  </style>

  <script>
    // Mobile menu toggle
    const navToggle = document.querySelector('.nav-toggle');
    const navMenu = document.querySelector('.nav-menu');

    if (navToggle && navMenu) {
      navToggle.addEventListener('click', () => {
        const isVisible = navMenu.style.display === 'flex';
        navMenu.style.display = isVisible ? 'none' : 'flex';
        if (!isVisible) {
          navMenu.style.position = 'absolute';
          navMenu.style.top = '100%';
          navMenu.style.left = '0';
          navMenu.style.right = '0';
          navMenu.style.background = 'white';
          navMenu.style.padding = 'var(--spacing-6)';
          navMenu.style.flexDirection = 'column';
          navMenu.style.borderTop = '1px solid var(--color-border)';
        }
      });
    }
  </script>
</body>
</html>

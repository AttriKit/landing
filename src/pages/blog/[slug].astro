---
import { getCollection } from 'astro:content';
import '../../styles/global.css';
import '../../styles/markdown.css';
import ProgressBar from '../../components/ProgressBar.astro';
import Breadcrumb from '../../components/Breadcrumb.astro';
import TableOfContents from '../../components/TableOfContents.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConsultationModal from '../../components/ConsultationModal.astro';
import SemanticRelatedPosts from '../../components/SemanticRelatedPosts.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import {
  generateArticleSchema,
  generateBreadcrumbSchema,
  generateFAQSchema,
  extractFAQsFromContent
} from '../../data/blog-schema';
import { formatDate, calculateReadingTime } from '../../lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Calculate reading time using utils
const readTimeMinutes = calculateReadingTime(post.body || '');

// Breadcrumb items
const breadcrumbItems = [
  { label: '首页', href: '/' },
  { label: '博客', href: '/blog/' },
  { label: post.data.title }
];

const postUrl = `https://attrikit.com/blog/${post.slug}/`;

// Generate structured data
const articleSchema = generateArticleSchema(post);
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbItems);

// Extract FAQs and generate schema
const faqs = extractFAQsFromContent(post.body);
const faqSchema = faqs.length > 0 ? generateFAQSchema(faqs) : null;
---

<BaseLayout
  title={`${post.data.title} - AttriKit 博客`}
  description={post.data.description}
  canonical={post.data.canonical || postUrl}
  type="article"
>
  <fragment slot="head">
    <meta property="article:published_time" content={post.data.pubDate.toISOString()} />
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify(articleSchema)}></script>
    <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)}></script>
    {faqSchema && <script type="application/ld+json" set:html={JSON.stringify(faqSchema)}></script>}
  </fragment>
  <!-- Header -->
  <Header />

  <!-- Progress Bar -->
  <ProgressBar />

  <!-- Article Content -->
  <article class="blog-post section-lg" data-pagefind-body data-pagefind-filter="type:blog">
    <div class="container">
      <div class="blog-layout">
        <!-- Main Content -->
        <div class="blog-main">
          <!-- Breadcrumb -->
          <Breadcrumb items={breadcrumbItems} />

          <!-- Article Header -->
          <header class="post-header">
            <h1 class="post-title">{post.data.title}</h1>
            <p class="post-description">{post.data.description}</p>

            <div class="post-meta-row">
              <div class="post-meta">
                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  <time datetime={post.data.pubDate.toISOString()}>
                    {formatDate(post.data.pubDate)}
                  </time>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20 21v-2a4 4 0 00-4-4H8a4 4 0 00-4 4v2"/>
                    <circle cx="12" cy="7" r="4"/>
                  </svg>
                  <span>{post.data.author}</span>
                </div>

                <div class="meta-item">
                  <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 6v6l4 2"/>
                  </svg>
                  <span>{readTimeMinutes} 分钟阅读</span>
                </div>
              </div>
            </div>
          </header>

          <!-- Article Content -->
          <div class="post-content markdown-content">
            <Content />
          </div>

          <!-- Semantic Related Posts -->
          <SemanticRelatedPosts
            currentTitle={post.data.title}
            currentSlug={post.slug}
            maxPosts={3} />
        </div>

        <!-- Sidebar -->
        <aside class="blog-sidebar">
          <TableOfContents />
        </aside>
      </div>
    </div>
  </article>

  <!-- Footer -->
  <Footer />

  <!-- Consultation Modal -->
  <ConsultationModal />

  <!-- Copy Code Button Script -->
  <script src="../../scripts/copy-code-button.js"></script>

  <!-- Image Lightbox Script -->
  <script src="../../scripts/image-lightbox.js"></script>

  <style>
    /* Blog Post Layout */
    .blog-post {
      padding-top: calc(var(--header-height) + var(--spacing-12));
      padding-bottom: var(--spacing-16);
    }

    .blog-layout {
      display: grid;
      grid-template-columns: 1fr 280px;
      gap: var(--spacing-12);
      position: relative;
    }

    .blog-main {
      min-width: 0;
    }

    .blog-sidebar {
      position: relative;
    }

    /* Post Header */
    .post-header {
      margin-bottom: var(--spacing-6);
      padding-bottom: var(--spacing-4);
      border-bottom: 1px solid var(--color-border);
    }

    .post-title {
      font-size: clamp(32px, 5vw, 48px);
      font-weight: 700;
      margin-bottom: var(--spacing-3);
      line-height: 1.2;
      letter-spacing: -0.03em;
      color: var(--color-text-primary);
      font-family: var(--font-family-display);
    }

    .post-description {
      font-size: var(--font-size-xl);
      color: var(--color-text-muted);
      line-height: 1.6;
      margin-bottom: var(--spacing-4);
    }

    .post-meta-row {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      align-items: center;
      gap: 24px;
      margin-bottom: 0;
    }

    .post-meta {
      display: flex;
      flex-wrap: wrap;
      gap: 24px;
    }

    .meta-item {
      display: inline-flex;
      align-items: center;
      gap: 6px;
      font-size: var(--font-size-sm);
      color: var(--color-text-muted);
      font-weight: 500;
    }

    .meta-item svg {
      flex-shrink: 0;
      opacity: 0.6;
    }

    /* Post Content wrapper */
    .post-content {
      /* Markdown styles applied via markdown.css */
    }

    /* Responsive Styles */
    @media (max-width: 1024px) {
      .blog-layout {
        grid-template-columns: 1fr;
      }

      .blog-sidebar {
        display: none;
      }
    }

    @media (max-width: 768px) {
      .post-title {
        font-size: var(--font-size-3xl);
      }

      .post-description {
        font-size: var(--font-size-lg);
      }

      .post-meta-row {
        flex-direction: column;
        align-items: flex-start;
      }
    }

    @media (max-width: 480px) {
      .blog-post {
        padding-top: calc(var(--header-height) + var(--spacing-8));
      }

      .post-title {
        font-size: var(--font-size-2xl);
      }

      .post-description {
        font-size: var(--font-size-base);
      }

      .post-meta {
        flex-direction: column;
        gap: 12px;
      }
    }
  </style>
</BaseLayout>

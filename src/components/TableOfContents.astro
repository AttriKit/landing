---
/**
 * TableOfContents Component
 * Auto-generated table of contents with scroll spy and collapse functionality
 */
---

<aside class="toc-container" id="toc-container">
  <div class="toc-header">
    <h3>目录</h3>
    <button class="toc-toggle" id="toc-toggle" aria-label="收起目录" aria-expanded="true">
      <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
        <polyline points="9 18 15 12 9 6"/>
      </svg>
    </button>
  </div>
  <nav class="toc-nav" id="toc-nav">
    <ul id="toc-list" class="toc-list"></ul>
  </nav>
</aside>

<style>
  .toc-container {
    position: sticky;
    top: calc(var(--header-height) + var(--spacing-8));
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--spacing-6);
    max-height: calc(100vh - var(--header-height) - var(--spacing-12));
    overflow-y: auto;
    transition: all var(--transition-normal);
  }

  /* Collapsed state - minimal width for toggle button only */
  .toc-container.collapsed {
    width: 48px;
    min-width: 48px;
    padding: 0;
  }

  .toc-container.collapsed .toc-nav {
    display: none;
  }

  .toc-container.collapsed .toc-header h3 {
    display: none;
  }

  .toc-container.collapsed .toc-header {
    border-bottom: none;
    margin-bottom: 0;
    padding-bottom: 0;
    justify-content: center;
  }

  .toc-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-4);
    padding-bottom: var(--spacing-3);
    border-bottom: 1px solid var(--color-border);
  }

  .toc-header h3 {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Toggle button */
  .toc-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    padding: 0;
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    cursor: pointer;
    color: var(--color-text-muted);
    transition: all var(--transition-fast);
    flex-shrink: 0;
  }

  .toc-toggle:hover {
    background: var(--color-bg-hover);
    color: var(--color-text-primary);
    border-color: var(--color-accent-primary);
  }

  .toc-toggle:focus-visible {
    outline: 2px solid var(--color-accent-primary);
    outline-offset: 2px;
  }

  /* Rotate icon when collapsed - points left when collapsed */
  .toc-toggle svg {
    transition: transform var(--transition-normal);
  }

  .toc-container.collapsed .toc-toggle svg {
    transform: rotate(180deg);
  }

  .toc-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .toc-list li {
    margin-bottom: 1px;
  }

  /* Use :global() for dynamically created links without data-astro-cid */
  :global(.toc-link) {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: 0;
    color: var(--color-text-muted);
    opacity: 0.4;
    text-decoration: none;
    font-size: var(--font-size-base);
    transition: all var(--transition-fast);
    max-width: 100%;
  }

  :global(.toc-link:hover) {
    color: var(--color-accent-primary);
    opacity: 0.7;
  }

  :global(.toc-link.active) {
    color: var(--color-accent-primary);
    opacity: 1;
    font-weight: 500;
  }

  /* Indicator - fixed width container */
  :global(.toc-link-indicator) {
    display: flex;
    align-items: center;
    width: 16px;
    flex-shrink: 0;
  }

  /* Text span - truncate with ellipsis */
  :global(.toc-link > span:last-child) {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    min-width: 0;
  }

  /* H2 indicator - 16px length, 4px height */
  :global(.toc-link.level-2 .toc-link-indicator::before) {
    content: '';
    width: 16px;
    height: 4px;
    background: currentColor;
    border-radius: 2px;
  }

  /* H3 indicator - 12px length, 4px height */
  :global(.toc-link.level-3 .toc-link-indicator::before) {
    content: '';
    width: 12px;
    height: 4px;
    background: currentColor;
    border-radius: 2px;
  }

  /* Hide TOC when no headings */
  .toc-container.hidden {
    display: none;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .toc-container {
      display: none;
    }
  }
</style>

<script>
  // Generate TOC from headings
  const tocList = document.querySelector('#toc-list');
  const headings = document.querySelectorAll('.doc-content h2, .doc-content h3, .post-content h2, .post-content h3');
  const tocContainer = document.querySelector('#toc-container');
  const tocToggle = document.querySelector('#toc-toggle');
  const hasHeadings = headings.length > 0;

  let isCollapsed = false;

  if (tocList && hasHeadings) {
    // Add IDs to headings and create TOC links
    headings.forEach((heading, index) => {
      if (!heading.id) {
        heading.id = `heading-${index}`;
      }

      const level = parseInt(heading.tagName.charAt(1));
      const li = document.createElement('li');

      const link = document.createElement('a');
      link.href = `#${heading.id}`;
      link.className = `toc-link level-${level}`;
      (link as any).dataset.target = heading.id;

      // Add indicator span
      const indicator = document.createElement('span');
      indicator.className = 'toc-link-indicator';
      link.appendChild(indicator);

      // Add text span
      const textSpan = document.createElement('span');
      textSpan.textContent = heading.textContent || '';
      link.appendChild(textSpan);

      li.appendChild(link);
      tocList.appendChild(li);
    });

    const tocLinks = document.querySelectorAll('.toc-link');
    const headingElements = Array.from(headings);

    // Update active TOC link based on scroll position
    let ticking = false;

    const updateActiveLink = () => {
      const scrollY = window.scrollY;
      const headerHeight = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--header-height')) || 80;
      const offset = headerHeight + 40; // Threshold for activation

      // Find the last heading that is above the current scroll position
      let activeHeading: HTMLElement | null = null;

      for (const heading of headingElements) {
        const headingTop = (heading as HTMLElement).offsetTop;
        if (scrollY >= headingTop - offset) {
          activeHeading = heading as HTMLElement;
        }
      }

      // Update active class on all TOC links
      tocLinks.forEach(link => {
        link.classList.remove('active');
        if (activeHeading && (link as any).dataset.target === activeHeading.id) {
          link.classList.add('active');
        }
      });

      ticking = false;
    };

    // Throttled scroll event listener
    window.addEventListener('scroll', () => {
      if (!ticking) {
        window.requestAnimationFrame(updateActiveLink);
        ticking = true;
      }
    }, { passive: true });

    // Initial update
    updateActiveLink();

    // Smooth scroll to heading on click
    tocLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const targetId = (link as any).dataset.target;
        const targetHeading = document.getElementById(targetId);

        if (targetHeading) {
          const headerHeight = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--header-height')) || 80;
          const offsetTop = targetHeading.getBoundingClientRect().top + window.scrollY - headerHeight - 20;
          window.scrollTo({
            top: offsetTop,
            behavior: 'smooth'
          });
        }
      });
    });

    // Toggle collapse/expand
    tocToggle?.addEventListener('click', () => {
      isCollapsed = !isCollapsed;
      tocContainer?.classList.toggle('collapsed', isCollapsed);
      tocToggle?.setAttribute('aria-expanded', String(!isCollapsed));
      tocToggle?.setAttribute('aria-label', isCollapsed ? '展开目录' : '收起目录');

      // Dispatch event for parent components to update layout
      window.dispatchEvent(new CustomEvent('toc-collapse-change', {
        detail: { isCollapsed }
      }));
    });

    // Dispatch initial state event
    window.dispatchEvent(new CustomEvent('toc-state-change', {
      detail: { hasHeadings, isCollapsed }
    }));
  } else {
    // Hide TOC container if no headings
    tocContainer?.classList.add('hidden');

    // Dispatch event to notify parent that TOC has no headings
    window.dispatchEvent(new CustomEvent('toc-state-change', {
      detail: { hasHeadings: false, isCollapsed: false }
    }));
  }
</script>

---
/**
 * PostCard Component (Enhanced)
 * Blog post card with image, tags, and reading time
 */
import TagBadge from './TagBadge.astro';
import ReadingTime from './ReadingTime.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author, tags, image } = post.data;

// Calculate reading time (avg 400 chars per minute for Chinese)
const wordCount = post.body?.split('').length || 0;
const readTimeMinutes = Math.max(1, Math.ceil(wordCount / 400));

// Format date
const formatDate = (date: Date) => {
  return date.toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};

const displayTags = tags?.slice(0, 3) || [];
---

<article class="post-card" data-post-id={post.slug}>
  <a href={`/blog/${post.slug}/`} class="post-card-link">
    {image && (
      <div class="post-card-image">
        <img src={image} alt={title} loading="lazy" />
      </div>
    )}

    <div class="post-card-content">
      <div class="post-card-tags">
        {displayTags.map(tag => (
          <TagBadge tag={tag} variant="primary" />
        ))}
      </div>

      <h2 class="post-title">{title}</h2>
      <p class="post-description">{description}</p>

      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>
          {formatDate(pubDate)}
        </time>
        <span class="post-author">{author}</span>
        <ReadingTime minutes={readTimeMinutes} />
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }

  .post-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-lg);
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: var(--color-bg-secondary);
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.05);
  }

  .post-card-content {
    padding: var(--spacing-6);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .post-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: var(--spacing-4);
  }

  .post-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-bottom: var(--spacing-3);
    color: var(--color-text-primary);
    line-height: 1.4;
    font-family: var(--font-family-display);
  }

  .post-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--spacing-6);
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--color-border);
  }

  .post-author::before {
    content: 'Â·';
    margin-right: 4px;
  }

  /* Fade in animation for search filtering */
  .post-card[data-post-id] {
    animation: fadeIn var(--transition-base) ease;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 640px) {
    .post-card-image {
      height: 160px;
    }

    .post-card-content {
      padding: var(--spacing-5);
    }

    .post-title {
      font-size: var(--font-size-lg);
    }
  }
</style>

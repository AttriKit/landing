---
/**
 * PostCard Component
 * Blog post card with reading time
 */
import ReadingTime from './ReadingTime.astro';
import type { CollectionEntry } from 'astro:content';
import { formatDate, calculateReadingTime } from '../lib/utils';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author } = post.data;

// Calculate reading time using utils
const readTimeMinutes = calculateReadingTime(post.body || '');
---

<article class="post-card">
  <a href={`/blog/${post.slug}/`} class="post-card-link">
    <div class="post-card-content">
      <h2 class="post-title">{title}</h2>
      <p class="post-description">{description}</p>

      <div class="post-meta">
        <time datetime={pubDate.toISOString()}>
          {formatDate(pubDate)}
        </time>
        <span class="post-author">{author}</span>
        <ReadingTime minutes={readTimeMinutes} />
      </div>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: var(--color-bg-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all var(--transition-base);
    height: 100%;
  }

  .post-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-lg);
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card-content {
    padding: var(--spacing-6);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .post-title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin-bottom: var(--spacing-3);
    color: var(--color-text-primary);
    line-height: 1.4;
    font-family: var(--font-family-display);
  }

  .post-description {
    color: var(--color-text-muted);
    line-height: 1.6;
    margin-bottom: var(--spacing-6);
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-meta {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 12px;
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--color-border);
  }

  .post-author::before {
    content: 'Â·';
    margin-right: 4px;
  }

  @media (max-width: 640px) {
    .post-card-content {
      padding: var(--spacing-5);
    }

    .post-title {
      font-size: var(--font-size-lg);
    }
  }
</style>

---
/**
 * ReadingTime Component
 * Display estimated reading time with clock icon
 */
interface Props {
  minutes: number;
}

const { minutes } = Astro.props;
const displayTime = minutes < 1 ? '< 1 分钟' : `${minutes} 分钟`;
---

<div class="reading-time">
  <svg width="14" height="14" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" aria-hidden="true">
    <circle cx="12" cy="12" r="10"/>
    <path d="M12 6v6l4 2"/>
  </svg>
  <span>{displayTime}阅读</span>
</div>

<style>
  .reading-time {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    color: var(--color-text-light);
    font-size: var(--font-size-xs);
    font-weight: 500;
  }

  .reading-time svg {
    flex-shrink: 0;
    opacity: 0.7;
  }
</style>

    overflow: hidden;
  }

  .related-post-meta {
    font-size: var(--font-size-xs);
    color: var(--color-text-light);
  }

  @media (max-width: 640px) {
    .related-posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

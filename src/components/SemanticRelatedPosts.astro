---
import { getCollection } from 'astro:content';
import { calculateSimilarity } from '../lib/keyword-matcher';

interface Props {
  currentTitle: string;
  currentSlug: string;
  maxPosts?: number;
}

const { currentTitle, currentSlug, maxPosts = 3 } = Astro.props;

// Get all posts and calculate similarity
const allPosts = await getCollection('blog');

const relatedPosts = allPosts
  .filter(post => post.slug !== currentSlug)
  .map(post => ({
    post,
    similarity: calculateSimilarity(currentTitle, post.data.title)
  }))
  .filter(item => item.similarity > 0)
  .sort((a, b) => {
    // Sort by similarity descending, then by date descending for equal similarity
    if (Math.abs(a.similarity - b.similarity) > 0.001) {
      return b.similarity - a.similarity;
    }
    return b.post.data.pubDate.valueOf() - a.post.data.pubDate.valueOf();
  })
  .slice(0, maxPosts)
  .map(item => item.post);

const hasPosts = relatedPosts.length > 0;
---

{hasPosts && (
  <section class="related-posts">
    <h3 class="related-posts-title">相关文章</h3>
    <div class="related-posts-grid">
      {relatedPosts.map(post => (
        <article class="related-post-card">
          <a href={`/blog/${post.slug}/`} class="related-post-link">
            <h4 class="related-post-title">{post.data.title}</h4>
            <p class="related-post-description">{post.data.description}</p>
            <div class="related-post-meta">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('zh-CN', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </a>
        </article>
      ))}
    </div>
  </section>
)}

<style>
  /* Reuse RelatedPosts component styles */
  .related-posts {
    margin-top: var(--spacing-16);
    padding-top: var(--spacing-12);
    border-top: 1px solid var(--color-border);

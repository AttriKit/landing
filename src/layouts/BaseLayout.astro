---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  type?: 'website' | 'article';
  ogImage?: string;
}

const {
  title,
  description,
  canonical = 'https://attrikit.com/',
  type = 'website',
  ogImage = 'https://attrikit.com/og.webp'
} = Astro.props;

const siteUrl = 'https://attrikit.com';
const fullCanonical = canonical.startsWith('http') ? canonical : `${siteUrl}${canonical}`;
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={description} />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content={type} />
  <meta property="og:url" content={fullCanonical} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:locale" content="zh_CN" />

  <!-- Canonical URL -->
  <link rel="canonical" href={fullCanonical} />

  <!-- Robots meta -->
  <meta name="robots" content="index, follow" />
  <meta name="googlebot" content="index, follow" />
  <meta name="baiduspider" content="index, follow" />

  <!-- Keywords (for Baidu SEO) -->
  <meta name="keywords" content="第一方归因,广告归因,移动归因,attrikit,数据归因,归因系统,广告效果分析,转化追踪" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />

  <!-- Baidu Analytics -->
  <script define:vars={{ siteUrl }}>
    var _hmt = _hmt || [];
    (function() {
      var hm = document.createElement("script");
      hm.src = "https://hm.baidu.com/hm.js?3b9f2aadbab4f2f491c3b302855239f3";
      var s = document.getElementsByTagName("script")[0];
      s.parentNode.insertBefore(hm, s);
    })();
  </script>

  <slot name="head" />
</head>
<body>
  <slot />
</body>
</html>
